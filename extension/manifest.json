{
  "manifest_version": 3,
  "name": "hrunxtnshn",
  "version": "1.0.0",
  "description": "Invisible autonomous research assistant running inside the user's browser",
  "permissions": [
    "tabs",
    "cookies",
    "scripting",
    "offscreen",
    "storage",
    "activeTab",
    "identity",
    "geolocation"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.maps.google.com/*",
    "*://*.linkedin.com/*",
    "*://*.instagram.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "ui/popup.html"
  },
  "options_page": "ui/settings.html",
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content/linkedinExtractor.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content/instagramExtractor.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://*.google.com/maps/*", "*://*.maps.google.com/*"],
      "js": ["content/mapsExtractor.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "offscreen/offscreen.html",
        "content/loginEmbed.js",
        "ui/permissionPrompt.html",
        "ui/loginScreen.html",
        "ui/taskProgress.html"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "icons": {
    "16": "ui/icons/icon16.png",
    "48": "ui/icons/icon48.png",
    "128": "ui/icons/icon128.png"
  }
}
